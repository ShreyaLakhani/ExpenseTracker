@model IEnumerable<BusinessLayer.ExpenseLimit>

@{
    ViewBag.Title = "ShowLimit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Show Expense Limit</h3>

<p>
    @Html.ActionLink("Create New", "AddLimit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpLimit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpLimit)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditLimit", new { id = item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "DeleteLimit", new { id = item.Id })
        </td>
    </tr>
}

</table>
